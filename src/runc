function runc() {
   clear
   local lRUNCFLAGS="$(echo -xc - -g -pipe -std=gnu18 -lm ${RUNCFLAGS} \
           -include stdlib.h -include stdio.h -include stddef.h        \
           -include stdarg.h -include string.h -include math.h         \
           -include stdint.h -include limits.h -include fenv.h         \
           -include complex.h -include errno.h )"

   echo -E "${1}" | cat |
      gcc ${lRUNCFLAGS//      / } -Werror -o stdin.out 2>/dev/null 1>&2
   local -i cc1_exitcode=$?

   ((cc1_exitcode))  &&  {
      echo 1>&2 '
======================================================

Compilation output:
______________________________________________________

'
      echo -E "${1}" | cat |   gcc ${lRUNCFLAGS//      / } -o stdin.out  -
      cc1_exitcode=$?
   }

   ((cc1_exitcode))  ||  {
      echo 1>&2 '
______________________________________________________

Program output:
______________________________________________________

'
      ./stdin.out ${@:2}
      rm ./stdin.out
      echo 1>&2 ''
   }
}

function runcc() {
    history -s runc \''
#include <stdlib.h>
#include <stdio.h>
#include <stddef.h>
#include <stdarg.h>
#include <string.h>
#include <math.h>
#include <stdint.h>
#include <limits.h>
#include <fenv.h>
#include <complex.h>
#include <errno.h>


int main(int argc, char *argv[])
 {
    printf("%s \n", "replaceme");

    return 0;
 }
'\'
}

